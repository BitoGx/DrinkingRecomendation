<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardCornerRadius="10dp"
  app:cardElevation="3dp"
  app:cardUseCompatPadding="true"
  app:contentPadding="5dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:orientation="vertical"
      android:padding="8dp">

      <TextView
        android:id="@+id/tv_item_riwayat_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/tanggal"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_jenisaktivitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/jenis_aktivitas"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_jarak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/jarak_tempuh"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/waktu"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_rekomendasiawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/rekomendasi_awal"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_rekomendasiakhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/rekomendasi_akhir"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:orientation="vertical"
      android:padding="8dp">

      <TextView
        android:id="@+id/tv_item_riwayat_gettanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/tanggal"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_getjenisaktivitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/jenis_aktivitas"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_getjarak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/jarak_tempuh"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_getwaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/waktu"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_getrekomendasiawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/rekomendasi_awal"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_item_riwayat_getrekomendasiakhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/rekomendasi_akhir"
        android:textStyle="bold" />
    </LinearLayout>
  </LinearLayout>

</androidx.cardview.widget.CardView>